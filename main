# DroNet-2023
# Main Computer

import socket

#***server side***


# create a socket object
serversocket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# get local machine IP
host = '192.168.23.145'

# bind the socket to a public host, and a port(should be from 8000-9000)
serversocket.bind((host, 8000))

serversocket.listen(1) # '1' is for server

print("Server started. Waiting for client connection...")

while True:
    # establish a connection
    clientsocket, addr = serversocket.accept()

    print("Got a connection from %s" % str(addr))

    # receive data from the client
    data = clientsocket.recv(1024)
    number = int(data.decode('utf-8'))

    # perform any necessary processing on the data (just calculating)
    result = number * 2

    # send the result back to the client
    clientsocket.send(str(result).encode('utf-8'))

    # close the connection
    clientsocket.close()
